        android:text="value"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtCommand1"
        app:layout_constraintLeft_toRightOf="@+id/txtCommand1"
        app:layout_constraintTop_toTopOf="@+id/txtCommand1" />

    <ImageButton
