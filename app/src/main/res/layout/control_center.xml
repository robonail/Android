<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageButton
    android:id="@+id/imgBtnUp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@android:drawable/menuitem_background"
    android:src="@drawable/arrow_up_48"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txtArduino"
    app:layout_constraintHorizontal_bias="0.512"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="0dp" />

    <ImageButton
        android:id="@+id/imgBtnDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/menuitem_background"
        android:src="@drawable/arrow_down_48"
        app:layout_constraintLeft_toRightOf="@+id/imgBtnLeft"
        app:layout_constraintTop_toBottomOf="@+id/imgBtnLeft" />

    <ImageButton
        android:id="@+id/imgBtnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/menuitem_background"
        android:src="@drawable/arrow_left_48"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imgBtnUp"
        app:layout_constraintTop_toBottomOf="@+id/imgBtnUp" />

    <ImageButton
        android:id="@+id/imgBtnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/menuitem_background"
        android:src="@drawable/arrow_right_48"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/imgBtnUp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBtnUp" />

    <EditText
        android:id="@+id/txtDown"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/imgBtnDown"
        app:layout_constraintTop_toTopOf="@+id/imgBtnDown" />

    <EditText
        android:id="@+id/txtUp"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/imgBtnUp"
        app:layout_constraintTop_toTopOf="@+id/imgBtnUp" />

    <EditText
        android:id="@+id/txtRight"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/imgBtnRight"
        app:layout_constraintTop_toTopOf="@+id/imgBtnRight" />

    <EditText
        android:id="@+id/txtLeft"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/imgBtnLeft"
        app:layout_constraintTop_toTopOf="@+id/imgBtnLeft" />


